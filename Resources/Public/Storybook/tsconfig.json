{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["DOM", "ES2018"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "types": ["jest", "node"]
  },
  "include": [
    "../JavaScript/**/*",
    "../JavaScript/__tests__/**/*"
  ]
} 